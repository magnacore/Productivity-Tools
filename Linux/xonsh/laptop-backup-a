#!/usr/bin/env xonsh
from rich.console import Console

console = Console()

console.rule(f"[bold cyan]Laptop Backup A...", style="cyan")

rsync --delete --progress --exclude-from=$HOME/Backups/RSYNC_EXCLUDE/rsync-homedir-local.txt -vahi $HOME/ /media/veracrypt1/SYSTEM_BACKUP/

date > ~/Software/logs/laptop-backup-a.txt
date > /media/veracrypt1/SYSTEM_BACKUP/backup_date.txt

console.rule(style="cyan")

sound-play-success &
