#!/home/manuj/anaconda3/envs/xonsh/bin/xonsh
cyan = '\x1b[1;36m'
no_color = '\x1b[0m'

import os

print(f"{cyan}Deleting previous snapshot...{no_color}")
sudo btrfs subvolume delete /run/media/$USER/SAWY_01_B/LAPTOP_BACKUP_D/@previous

print(f"{cyan}Creating a new read only snapshot...{no_color}")
sudo btrfs subvolume snapshot -r /run/media/$USER/SAWY_01_B/LAPTOP_BACKUP_D/@current/ /run/media/$USER/SAWY_01_B/LAPTOP_BACKUP_D/@previous

print(f"{cyan}Synchronizing...{no_color}")
rsync --delete --progress --exclude-from=$HOME/Backups/RSYNC_EXCLUDE/rsync-homedir-local.txt -vahi $HOME/ /run/media/$USER/SAWY_01_B/LAPTOP_BACKUP_D/@current/

date > ~/Software/logs/laptop-backup-d.txt
date > /run/media/$USER/SAWY_01_B/LAPTOP_BACKUP_D/@current/backup_date.txt

sudo btrfs filesystem show

print(u'\u2500' * os.get_terminal_size().columns)

sound-play-success &
