#!/home/manuj/anaconda3/envs/xonsh/bin/xonsh

import os
import glob
import sys
from tqdm import tqdm
import mimetypes

mimetypes.init()

def get_mime(file):
	mimestart = mimetypes.guess_type(file)[0]

	if mimestart != None:
		mimestart = mimestart.split('/')[0]
		return mimestart
	else:
		return None

allVideoFiles = glob.glob("*.*")

for video in tqdm(allVideoFiles):
	mimestart = get_mime(video)

	if mimestart != None:		
		if mimestart in ['video']: 
			new_filename = os.path.splitext(video)[0] + '.YouTube'
			touch @(new_filename)
			# echo @(new_filename) > @(new_filename)
