#!/home/manuj/anaconda3/envs/xonsh/bin/xonsh
cyan		= '\x1b[1;36m'
red			= '\033[0;31m'
no_color	= '\x1b[0m'

import os
from tqdm import tqdm

import sys
sys.path.append("/home/manuj/Bin")

from utilities import get_filename_extension

# sys.argv[0] is the name of the script which will always be there
if len(sys.argv) == 1: # No arguments passed
	selection = False
elif len(sys.argv) > 1:
	selection = True

if selection:
	print(f"{cyan}Converting filenames to text...{no_color}")
	allFiles = sys.argv[1:]
	allFiles.sort()

	for file in tqdm(allFiles):

		new_filename, _ = get_filename_extension(file)
		new_filename = new_filename + '.md'

		touch @(new_filename)
		echo @(file) > @(new_filename)

	sound-play-success &
else:
	print(f"{red}No file selected!{no_color}")
	sound-play-fail &

print(u'\u2500' * os.get_terminal_size().columns)
