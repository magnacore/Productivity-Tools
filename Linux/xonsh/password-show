#!/usr/bin/env xonsh

import os
from simple_term_menu import TerminalMenu

root_dir = p"~/.password-store/password/"

search_result = []

for root, dirs, files in os.walk(root_dir):
    for name in files:
    
        abs_path = os.path.abspath(os.path.join(root, name))

        abs_path = abs_path.replace("/home/manuj/.password-store/password/", "")
        abs_path = abs_path.replace(".gpg", "")

        search_result.append(abs_path)

search_result.sort()

terminal_menu = TerminalMenu(search_result)
menu_entry_index = terminal_menu.show()

selection = search_result[menu_entry_index]

pass @(f"password/{selection}") | nms -as -f green

print(u'\u2500' * os.get_terminal_size().columns)

sound-play-success &
