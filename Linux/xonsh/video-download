import os
from playsound import playsound

$HOME/anaconda3/envs/util/bin/yt-dlp -c --merge-output-format 'mkv' -f 'bestvideo[height<=1080]+bestaudio' -o '%(playlist)s/%(playlist_index)s - %(title)s.%(ext)s' --retries infinite --write-auto-sub -a ~/Backups/youtube.txt

playsound(p"~/Bin/oxygen-sound-theme/Oxygen-K3B-Finish-Success.ogg")

print(u'\u2500' * os.get_terminal_size().columns)
