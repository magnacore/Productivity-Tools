#!/home/manuj/anaconda3/envs/xonsh/bin/xonsh
cyan = '\x1b[1;36m'
no_color = '\x1b[0m'

import os
from tqdm import tqdm

import sys
sys.path.append("/home/manuj/Bin")

from utilities import get_filename_extension

# sys.argv[0] is the name of the script which will always be there
if len(sys.argv) == 1: # No arguments passed
	selection = False
elif len(sys.argv) > 1:
	selection = True

if selection:
	
	allFiles = sys.argv[2:]
	tag = sys.argv[1]
	allFiles.sort()

	print(f"{cyan}Adding tag #{tag}{no_color}")

	for file in tqdm(allFiles):

		file_name, extension = get_filename_extension(file)

		new_filename = file_name + f' #{tag}' + extension
		os.rename(file, new_filename)

print(u'\u2500' * os.get_terminal_size().columns)
